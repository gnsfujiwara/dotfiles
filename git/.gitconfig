    email = gnsfujiwara@disroot.org
    signingkey = 1A5D726B949BA7D2

[commit]
    gpgsign = true

[pull]
    rebase = true

[init]
	defaultBranch = master

[alias]
    undo = reset HEAD~1 --mixed

[core]
	pager = delta

[interactive]
	diffFilter = delta --color-only

[delta]
	side-by-side = true
	navigate = true
	light = false

[merge]
	conflictstyle = diff3

[diff]
	colorMoved = default
