# =========================================
#
# i3wm config
# Author: gnsfujiwara (Gustavo Vin√≠cios)
#
# =========================================

# Default modkey
set $mod Mod4

# Default terminal
set $terminal urxvtc

# =============
# Appearance
# =============

# Window title font
font pango: Cozette 8

## Base16 Black Metal
# Author: metalelf0 (https://github.com/metalelf0)
#
# You can use these variables anywhere in the i3 configuration file.

set $base00 #000000
set $base01 #121212
set $base02 #222222
set $base03 #333333
set $base04 #999999
set $base05 #c1c1c1
set $base06 #999999
set $base07 #c1c1c1
set $base08 #5f8787
set $base09 #aaaaaa
set $base0A #a06666
set $base0B #dd9999
set $base0C #aaaaaa
set $base0D #888888
set $base0E #999999
set $base0F #444444

# Basic bar configuration using the Base16 variables.
bar {
    status_command i3status
    position top
    height 25
    workspace_min_width 25
    font pango: Cozette 8

    colors {
        background $base00
        separator  $base01
        statusline $base04

        # State             Border  BG      Text
        focused_workspace   $base05 $base0D $base00
        active_workspace    $base05 $base03 $base00
        inactive_workspace  $base03 $base01 $base05
        urgent_workspace    $base08 $base08 $base00
        binding_mode        $base00 $base0A $base00
    }
}

# Basic color configuration using the Base16 variables for windows and borders.
# Property Name         Border  BG      Text    Indicator Child Border
client.focused          $base05 $base0D $base00 $base0D $base0C
client.focused_inactive $base01 $base01 $base05 $base03 $base01
client.unfocused        $base01 $base00 $base05 $base01 $base01
client.urgent           $base08 $base08 $base00 $base08 $base08
client.placeholder      $base00 $base00 $base05 $base00 $base00
client.background       $base07

# Windows settings
default_border pixel 3
gaps inner 8
gaps outer 8
tiling_drag modifier titlebar

# ==============
# Keybindings
# ==============

# Default float modifier
floating_modifier $mod

# Start a terminal
bindsym $mod+Return exec --no-startup-id $terminal

# Start program launcher
bindsym $mod+d exec --no-startup-id i3-dmenu-desktop --dmenu="dmenu -i -fn Cozette -nb $base00 -nf $base04 -sb $base0D -sf $base00"
# bindsym $mod+d exec "rofi -modi drun,run -show drun"

# Kill focused window
bindsym $mod+q kill

# Reload the configuration file
bindsym $mod+Shift+c reload

# Restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# Exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec i3-msg exit

# Change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Split in horizontal orientation
bindsym $mod+b split h

# Split in vertical orientation
bindsym $mod+v split v

# Enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# Change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# Change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# Focus the parent container
bindsym $mod+a focus parent

# Set volume with amixer
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -M set Master 10%+ && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -M set Master 10%- && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id amixer -M set Master toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id amixer -M set Capture toggle && $refresh_i3status

# Control media
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86AudioPrev exec --no-startup-id playerctl previous

# Take screenshots
bindsym --release Print exec --no-startup-id screenshot full
bindsym --release $mod+Print exec --no-startup-id screenshot sel
bindsym --release Shift+Print exec --no-startup-id screenshot active

# Open clipmenu
bindsym $mod+c exec --no-startup-id clipmenu -i -fn Cozette -nb '#000000' -nf '#999999' -sb '#888888' -sf '#000000'

# =============
# Workspaces
# =============

# Define workspaces names
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# Switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10


# ========
# Modes
# ========

mode "resize" {
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

# ========
# Rules
# ========


# ============
# Autostart
# ============

# XDG Autostart
exec --no-startup-id dex --autostart --environment i3

# Clipboard manager
exec --no-startup-id clipmenud

# Screenlocker
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork
