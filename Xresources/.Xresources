! ----------------------------------------------------------
! Xft
! ----------------------------------------------------------
Xft.dpi:       96
Xft.antialias: true
Xft.rgba:      rgb
Xft.hinting:   true
Xft.hintstyle: hintslight
Xft.autohint:  true
Xft.lcdfilter: lcddefault

! ----------------------------------------------------------
! XTerm
! ----------------------------------------------------------
XTerm.termName:        xterm-256color
XTerm.ttyModes:        erase ^?
XTerm.fullscreen:      never
XTerm.omitTranslation: fullscreen

XTerm.vt100.locale:          true
XTerm.vt100.utf8:            true
XTerm.vt100.backarrowKey:    false
XTerm.vt100.metaSendsEscape: true
XTerm.vt100.eightBitInput:   false
XTerm.vt100.eightBitControl: false
XTerm.vt100.eightBitOutput:  true
XTerm.vt100.loginShell:      true
XTerm.vt100.saveLines:       4096
XTerm.vt100.bellIsUrgent:    true
XTerm.vt100.trimSelection:   true

XTerm.vt100.font:           -uw-ttyp0-medium-r-*-*-16-*-*-*-*-*-iso10646-1
XTerm.vt100.internalBorder: 12

XTerm.vt100.charClass: 33:48,36-47:48,58-59:48,61:48,63-64:48,95:48,126:48
XTerm.vt100.on3Clicks: regex ([[:alpha:]]+://)?([[:alnum:]!#+,./=?@_~-]|(%[[:xdigit:]][[:xdigit:]]))+

XTerm.vt100.translations: #override \n\
    Ctrl Shift <Key>C: copy-selection(CLIPBOARD) \n\
    Ctrl Shift <Key>V: insert-selection(CLIPBOARD) \n\
    Shift <Btn1Up>: exec-formatted("xdg-open '%t'", PRIMARY) select-start() select-end()

!----------------------------------------------------------
! URxvt
!----------------------------------------------------------

! Base16 Black Metal
! Scheme author: metalelf0 (https://github.com/metalelf0)
! Template author: Tinted Theming (https://github.com/tinted-theming)

#define base00 #000000
#define base01 #121212
#define base02 #222222
#define base03 #333333
#define base04 #999999
#define base05 #c1c1c1
#define base06 #999999
#define base07 #c1c1c1
#define base08 #5f8787
#define base09 #aaaaaa
#define base0A #a06666
#define base0B #dd9999
#define base0C #aaaaaa
#define base0D #888888
#define base0E #999999
#define base0F #444444

*foreground:   base05
#ifdef background_opacity
*background:   [background_opacity]base00
#else
*background:   base00
#endif
*cursorColor:  base05

*color0:       base00
*color1:       base08
*color2:       base0B
*color3:       base0A
*color4:       base0D
*color5:       base0E
*color6:       base0C
*color7:       base05

*color8:       base03
*color9:       base08
*color10:      base0B
*color11:      base0A
*color12:      base0D
*color13:      base0E
*color14:      base0C
*color15:      base07

! Note: colors beyond 15 might not be loaded (e.g., xterm, urxvt),
! use 'shell' template to set these if necessary
*color16:      base09
*color17:      base0F
*color18:      base01
*color19:      base02
*color20:      base04
*color21:      base06
