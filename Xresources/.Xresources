!----------------------------------------------------------
! Xft
!----------------------------------------------------------
Xft.dpi:       96
Xft.antialias: true
Xft.rgba:      rgb
Xft.hinting:   true
Xft.hintstyle: hintslight
Xft.autohint:  true
Xft.lcdfilter: lcddefault

!----------------------------------------------------------
! XTerm
!----------------------------------------------------------
XTerm*termName:            xterm-256color
XTerm*locale:              true
XTerm*utf8:                true
XTerm*metaSendsEscape:     true
XTerm*eightBitInput:       false
XTerm*eightBitControl:     false
XTerm*eightBitOutput:      true
XTerm*loginShell:          true
XTerm*saveLines:           4096
XTerm*backarrowKey:        false
XTerm*ttyModes:            erase ^?
XTerm*fullscreen:          never
XTerm*omitTranslation:     fullscreen
XTerm*bellIsUrgent:        true
XTerm*trimSelection:       true

XTerm*font:            -uw-ttyp0-medium-r-*-*-16-*-*-*-*-*-iso10646-1
XTerm*font1:           -uw-ttyp0-medium-r-*-*-12-*-*-*-*-*-iso10646-1
XTerm*font2:           -uw-ttyp0-medium-r-*-*-14-*-*-*-*-*-iso10646-1
XTerm*font3:           -uw-ttyp0-medium-r-*-*-16-*-*-*-*-*-iso10646-1
XTerm*font4:           -uw-ttyp0-medium-r-*-*-18-*-*-*-*-*-iso10646-1
XTerm*font5:           -uw-ttyp0-medium-r-*-*-22-*-*-*-*-*-iso10646-1
XTerm*font6:           -uw-ttyp0-medium-r-*-*-22-*-*-*-*-*-iso10646-1
XTerm*internalBorder:  12

XTerm*charClass: 33:48,36-47:48,58-59:48,61:48,63-64:48,95:48,126:48
XTerm*on3Clicks: regex ([[:alpha:]]+://)?([[:alnum:]!#+,./=?@_~-]|(%[[:xdigit:]][[:xdigit:]]))+

XTerm.VT100.translations: #override \n\
    Ctrl Shift <Key>C: copy-selection(CLIPBOARD) \n\
    Ctrl Shift <Key>V: insert-selection(CLIPBOARD) \n\
    Shift <Btn1Up>: exec-formatted("xdg-open '%t'", PRIMARY) select-start() select-end()


! Base16 Black Metal
